<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegiserComplete">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/personCIVH"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_person"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="@+id/parent"
        app:layout_constraintStart_toStartOf="@+id/parent"
        app:layout_constraintTop_toTopOf="@+id/parent"
        tools:ignore="MissingConstraints">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/RegPageId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:text="Register details"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/personCIVH"
        app:layout_constraintStart_toStartOf="@+id/personCIVH"
        app:layout_constraintTop_toBottomOf="@+id/personCIVH"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/arUsername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/boxshape"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/RegPageId"
        app:layout_constraintStart_toStartOf="@+id/RegPageId"
        app:layout_constraintTop_toBottomOf="@+id/RegPageId"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/arEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/boxshape"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/arUsername"
        app:layout_constraintStart_toStartOf="@+id/arUsername"
        app:layout_constraintTop_toBottomOf="@+id/arUsername"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/arpass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/boxshape"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/arEmail"
        app:layout_constraintStart_toStartOf="@+id/arEmail"
        app:layout_constraintTop_toBottomOf="@+id/arEmail"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/arconPass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/boxshape"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/arpass"
        app:layout_constraintStart_toStartOf="@+id/arpass"
        app:layout_constraintTop_toBottomOf="@+id/arpass"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>